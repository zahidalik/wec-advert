%nav.navbar.navbar-expand-lg.navbar-dark.bg-info.sticky-top
  = link_to root_path, class: "navbar-brand"do
    = image_tag("school.jpg", alt: "school", height: "30", loading: "lazy", width: "30", class: "d-inline-block align-top")
    W.E.C.
