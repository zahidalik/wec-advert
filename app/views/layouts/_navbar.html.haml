          .dropdown-menu{"aria-labelledby" => "navbarDropdown"}
            = link_to "CTTC", cttc_path, class: "dropdown-item"
            = link_to "A3 Journalism", journalism_path, class: "dropdown-item"
            = link_to "A3 Nursing", nursing_path, class: "dropdown-item"
            = link_to "WGS", wgs_path, class: "dropdown-item"
            = link_to "WBS", wbs_path, class: "dropdown-item"
            = link_to "A Level", a_level_path, class: "dropdown-item"
            = link_to "TCDOS", tcdos_path, class: "dropdown-item"
            = link_to "KEMPS", kemps_path, class: "dropdown-item"
            = link_to "UANS", uans_path, class: "dropdown-item"
            /.dropdown-divider
          %span.sr-only (current)
      %li.nav-item.active
        = link_to '#', class: "nav-link" do
          .fa.fa-users
          Important contacts
      %li.nav-item.active
        = link_to '#', class: "nav-link" do
          .fa.fa-user-graduate
          Student life
    %ul.navbar-nav.ml-auto
      %li.nav-item.active
        = link_to "http://www.wipahs.co.tz", class: "nav-link" do
          .fa.fa-globe-africa
          WIPAHS
      %li.nav-item.active
        = link_to about_path, class: "nav-link" do
          .fa.fa-info-circle
          About us
      %li.nav-item
        .nav-link
          .badge.badge-pill.badge-primary
            = @current_date
